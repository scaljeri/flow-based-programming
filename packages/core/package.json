{
 "name": "@scaljeri/fbp-core",
 "version": "1.0.0",
 "main": "dist/index.js",
 "types": "dist/index.d.ts",
 "license": "MIT",
 "scripts": {
  "build": "rm -rf ./dist && yarn build:workers && yarn build:nodes",
  "build:nodes": "webpack",
  "build:workers": "tsc -p tsconfig-workers.json",
  "test": "TS_NODE_PROJECT='./tsconfig-test.json' mocha -r ts-node/register --check-coverage --lines 90 --exclude *.test.ts src/**/*.test.ts",
  "coverage": "nyc yarn test",
  "old:coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
  "serve": "npx live-server .",
  "babel": "./node_modules/.bin/babel ./dist --out-dir lib",
  "browser": "browserify -t babelify ./dist/base.js  > ./dist/bundle.js"
 },
 "devDependencies": {
  "@babel/cli": "^7.8.4",
  "@babel/core": "^7.8.6",
  "@babel/plugin-syntax-dynamic-import": "^7.8.3",
  "@babel/preset-env": "^7.8.6",
  "@purtuga/esm-webpack-plugin": "^1.2.1",
  "@types/chai": "^4.2.10",
  "@types/mocha": "^7.0.2",
  "@types/sinon": "^7.5.2",
  "@types/sinon-chai": "^3.2.3",
  "babel-core": "^6.26.3",
  "babel-plugin-bare-import-rewrite": "^2.0.0",
  "babel-preset-es2015": "^6.24.1",
  "babelify": "^10.0.0",
  "browserify": "^16.5.0",
  "lodash": "^4.17.19",
  "mocha": "^7.1.0",
  "rollup": "^1.32.0",
  "sinon": "^9.0.1",
  "sinon-chai": "^3.5.0",
  "ts-loader": "^6.2.1",
  "tsc": "^1.20150623.0",
  "typescript": "^3.8.3",
  "webpack": "^4.42.0",
  "webpack-cli": "^3.3.11",
  "webpack-node-externals": "^1.7.2"
 },
 "dependencies": {
  "chai": "^4.2.0",
  "di-xxl": "^1.2.2",
  "nyc": "^15.0.0",
  "rxjs": "6.5.5",
  "ts-node": "8.6.2"
 },
 "nyc": {
  "include": [
   "src/**/*.ts"
  ],
  "exclude": [
   "**/*.test.ts"
  ],
  "extension": [
   ".ts"
  ],
  "instrumentation": {
   "excludes": [
    "**/node_modules/**",
    "**/*.test.ts"
   ]
  },
  "reporter": [
   "text-summary",
   "lcov",
   "html"
  ],
  "sourceMap": true
 }
}
